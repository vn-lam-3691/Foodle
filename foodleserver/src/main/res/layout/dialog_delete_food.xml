<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_dialog_delete"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_28sdp"
    android:paddingStart="@dimen/_12sdp"
    android:paddingTop="@dimen/_16sdp"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingBottom="@dimen/_16sdp"
    android:background="@drawable/background_dialog">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:includeFontPadding="false"
        android:text="Xóa món"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/inter_regular"
        android:includeFontPadding="false"
        android:text="Bạn có chắc muốn xóa món này không?"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:fontFamily="@font/inter_semibold"
        android:includeFontPadding="false"
        android:text="XÓA NGAY"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_message" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/inter_semibold"
        android:includeFontPadding="false"
        android:text="KHÔNG"
        android:textColor="#565759"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toStartOf="@id/tv_delete"
        app:layout_constraintTop_toTopOf="@id/tv_delete"
        app:layout_constraintBottom_toBottomOf="@id/tv_delete"/>

</androidx.constraintlayout.widget.ConstraintLayout>